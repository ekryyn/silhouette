<MainWindow>:
    orientation: 'vertical'
    padding: 300, 100, 300, 50
    spacing: 10

    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            size: self.pos
            size: self.size

    Cell

    BoxLayout:
        orientation: 'vertical'

        Button:
            text: 'Play'
        Button:
            text: 'Options'
        Button:
            text: 'Exit'
            on_press: exit()

<LevelIcon>:
    text: self.level.name
    text_size: self.size
    halign: 'center'
    padding_y: 10

    canvas.before:
        Color:
            rgb: (.1, .1, .1) if self.state == 'normal' else (.1, .2, .1)
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgb: 1,1,1
        Rectangle:
            pos: self.pos
            size: self.icon_texture.size
            texture: self.icon_texture
